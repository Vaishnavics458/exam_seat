// backend/src/app.js
const express = require('express');
const dotenv = require('dotenv');
const cors = require('cors');
const routes = require('./routes');

dotenv.config();

const app = express();

// Allow requests from the frontend dev server (Vite)
// Use '*' for all origins if you prefer during development.
const corsOptions = {
  origin: process.env.CORS_ALLOWED_ORIGIN || 'http://localhost:5173',
  methods: ['GET','POST','PUT','DELETE','OPTIONS'],
  credentials: true
};
app.use(cors(corsOptions));

// parse json bodies
app.use(express.json());

// mount API routes under /api
app.use('/api', routes);

// health
app.get('/health', (req, res) => res.json({ status: 'ok' }));

const port = process.env.PORT || 4000;
app.listen(port, () => {
  console.log(`ExamSeat backend listening on port ${port}`);
});
